<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="NightAdjusted.Theme.SpendTrack" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="PlatformAdjusted.Theme.SpendTrack" parent="NightAdjusted.Theme.SpendTrack">
        <item name="android:statusBarColor">@color/surface</item>
    </style>

    <style name="Theme.SpendTrack" parent="PlatformAdjusted.Theme.SpendTrack" />

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.SpendTrack.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="windowSplashScreenBackground">@color/surface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.SpendTrack</item>
    </style>
</resources>